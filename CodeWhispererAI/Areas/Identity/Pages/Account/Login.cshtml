@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-light text-center">@ViewData["Title"]</h1>
<div class="container">
        <section>
            <form id="account" method="post">
                <h2 class="text-light text-center">To a Code Whisperer AI Account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label text-light">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
            <div class="text-center">
                    <button id="login-submit" type="submit" class="w-25 btn btn-lg btn-primary mb-2">Log in</button>
                </div>
            <div class="text-center">
                    <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="text-light btn btn-md btn-primary">Forgot your password?</a>
                    </p>
                    <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-light btn btn-md btn-primary">Register as a new user</a>
                    </p>
                    <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-light btn btn-md btn-primary">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
